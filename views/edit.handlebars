<div class="container m-3">
  <h3>編輯餐廳</h3>

  <form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">

    <div class="my-3">
      <label for="name">中文店名</label>
      <input type="text" value="{{ restaurant.name }}" name="name" id="name" class="form-control" required>
    </div>

    <div class="my-3">
      <label for="name_en">英文店名</label>
      <input type="text" value="{{ restaurant.name_en }}" name="name_en" id="name_en" class="form-control">
    </div>

    <div class="my-3">
      <label for="category">餐廳類型</label>
      <input type="text" value="{{ restaurant.category }}" name="category" id="category" list="categoryOption"
        class="form-control" required>
      <datalist id="categoryOption">
        <option>美式</option>
        <option>咖啡</option>
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
      </datalist>
    </div>

    <div class="my-3">
      <label for="image">圖片網址</label>
      <input type="text" value="{{ restaurant.image }}" name="image" id="image" class="form-control" required>
    </div>

    <div class="my-3">
      <label for="location">餐廳地址</label>
      <input type="text" value="{{ restaurant.location }}" name="location" id="location" class="form-control" required>
    </div>

    <div class="my-3">
      <label for="phone">餐廳電話</label>
      <input type="text" value="{{ restaurant.phone }}" name="phone" id="phone" class="form-control" required>
    </div>

    <div class="my-3">
      <label for="google_map">google地圖</label>
      <input type="text" value="{{ restaurant.google_map }}" name="google_map" id="google_map" class="form-control"
        required>
    </div>

    <div class="my-3">
      <label for="rating">google評分</label>
      <input type="text" value="{{ restaurant.rating }}" name="rating" id="rating" class="form-control" required>
    </div>

    <div class="my-3">
      <label for="description">餐廳簡介</label>
      <textarea rows="3" type="text" name="description" id="description" class="form-control" required>{{ restaurant.description }}
      </textarea>
      <button type="submit" class="btn btn-primary my-3">儲存更新</button>
      <button type="reset" class="btn btn-outline-danger">重新輸入</button>
    </div>
  </form>

</div>